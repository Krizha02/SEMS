<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sems.fragments.HomeFragment"
        android:label="Home">
        <argument
            android:name="user_email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.sems.fragments.CalendarFragment"
        android:label="Calendar">
        <argument
            android:name="user_email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.example.sems.fragments.EventsFragment"
        android:label="Events">
        <argument
            android:name="user_email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.sems.fragments.ProfileFragment"
        android:label="Profile">
        <argument
            android:name="user_email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_users"
        android:name="com.example.sems.fragments.UserManagementFragment"
        android:label="Users">
        <argument
            android:name="user_email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.sems.fragments.SettingsFragment"
        android:label="Settings">
        <argument
            android:name="user_email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation> 